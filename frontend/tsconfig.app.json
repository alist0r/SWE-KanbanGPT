{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false, /*will also need to be changed back to true */
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,    /* change back to true in the final version */
    "noEmitOnError": false, /* remove this as well in the final version */
    "jsx": "react-jsx",

    /* Linting */
    "strict": false, /* change all of these back to true once errors are addressed */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedSideEffectImports": false
  },
  "include": ["src"]

  /*  when experimenting with the docker, there were several variables 
  that had to be changed to false to get the docker to work.  
  whenever the errors are fixed, we can push them back to false */
}
